%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          %ul.nav.nav-tabs
            %li.active
              %a(href="") Recent Payments
            %li
              %a(href="/ui/admin_add_video") Add a New Video
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.each do |payment|
              - user = payment.user
                %tr
                  %td= user.full_name
                  %td= user.email
                  %td= number_to_currency(payment.amount/100.0)
                  %td= payment.reference_id
